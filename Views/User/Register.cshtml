
@{
    ViewBag.Title = "Register";
}
<section class="section-content padding-y">
    <!-- ============================ COMPONENT REGISTER   ================================= -->
    <div class="card mx-auto" style="max-width:520px; margin-top:40px;">
        <article class="card-body">
            <header class="mb-4"><h2 class="card-title text-center">Đăng ký</h2></header>
            <form asp-action="Register" asp-controller="User" method="post">
                @Html.AntiForgeryToken()

                <div class="form-row">
                    <div class="col form-group">
                        <label>Họ tên</label>
                        <input type="text" class="form-control @(ViewData.ModelState["name"]?.Errors.Count > 0 ? "is-invalid" : "")" name="name" value="@Request.Form["name"]">
                        <span class="text-danger">@Html.ValidationMessage("name")</span>
                    </div>
                </div> <!-- form-row end.// -->

                <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control @(ViewData.ModelState["email"]?.Errors.Count > 0 ? "is-invalid" : "")" name="email" value="@Request.Form["email"]">
                    <span class="text-danger">@Html.ValidationMessage("email")</span>
                    <small class="form-text text-muted">Chúng tôi sẽ không bao giờ chia sẻ email của bạn với bất kỳ ai khác.</small>
                </div> <!-- form-group end.// -->

                <div class="form-group">
                    <label>Số điện thoại</label>
                    <input type="text" class="form-control @(ViewData.ModelState["phone"]?.Errors.Count > 0 ? "is-invalid" : "")" name="phone" value="@Request.Form["phone"]">
                    <span class="text-danger">@Html.ValidationMessage("phone")</span>
                </div> <!-- form-group end.// -->

                <div class="form-group">
                    <label class="custom-control custom-radio custom-control-inline">
                        <input class="custom-control-input" checked="" type="radio" name="gender" value="Male">
                        <span class="custom-control-label"> Nam </span>
                    </label>
                    <label class="custom-control custom-radio custom-control-inline">
                        <input class="custom-control-input" type="radio" name="gender" value="Female">
                        <span class="custom-control-label"> Nữ </span>
                    </label>
                </div> <!-- form-group end.// -->

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Thành phố</label>
                        <input type="text" class="form-control @(ViewData.ModelState["city"]?.Errors.Count > 0 ? "is-invalid" : "")" name="city" value="@Request.Form["city"]">
                        <span class="text-danger">@Html.ValidationMessage("city")</span>
                    </div> <!-- form-group end.// -->
                    <div class="form-group col-md-6">
                        <label>Quốc gia</label>
                        <input type="text" class="form-control @(ViewData.ModelState["country"]?.Errors.Count > 0 ? "is-invalid" : "")" name="country" value="@Request.Form["country"]">
                        <span class="text-danger">@Html.ValidationMessage("country")</span>
                    </div> <!-- form-group end.// -->
                </div> <!-- form-row.// -->

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Mật khẩu</label>
                        <input class="form-control @(ViewData.ModelState["password"]?.Errors.Count > 0 ? "is-invalid" : "")" type="password" name="password">
                        <span class="text-danger">@Html.ValidationMessage("password")</span>
                    </div> <!-- form-group end.// -->
                    <div class="form-group col-md-6">
                        <label>Nhập lại mật khẩu</label>
                        <input class="form-control @(ViewData.ModelState["confirm_password"]?.Errors.Count > 0 ? "is-invalid" : "")" type="password" name="confirm_password">
                        <span class="text-danger">@Html.ValidationMessage("confirm_password")</span>
                    </div> <!-- form-group end.// -->
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block"> Đăng ký </button>
                </div> <!-- form-group// -->

                <div class="form-group">
                    <label class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" checked="">
                        <div class="custom-control-label"> Tôi đồng ý với các <a href="#">điều khoản và điều kiện.</a> </div>
                    </label>
                </div> <!-- form-group end.// -->
            </form>
        </article><!-- card-body.// -->
    </div> <!-- card .// -->
    <p class="text-center mt-4">Đã có tài khoản? <a href="@Url.Action("Login", "User")">Đăng nhập</a></p>
    <br><br>
    <!-- ============================ COMPONENT REGISTER  END.// ================================= -->
</section>
