@model IEnumerable<TranThiMinhHoai_2122110262.Models.Brand>

@{
    ViewBag.Title = "Quản lý thương hiệu";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 d-flex justify-content-between align-items-center mb-4">
                <h1>Danh sách thương hiệu</h1>
                <div>
                    @Html.ActionLink("Thêm thương hiệu", "Create", null, new { @class = "btn btn-secondary ml-1 mb-4" })
                    <a href="@Url.Action("Trash", "Brand", new { area = "Admin" })">
                        <button type="button" class="btn btn-danger ml-1 mb-4">
                            <i class="fa fa-trash"></i> Thùng rác
                        </button>
                    </a>
                </div>
            </div>

            <div class="col-lg-12">
                <table class="table table-bordered table-lg">
                    <thead>
                        <tr>
                            <th style="width: 50px">ID</th>
                            @*<th style="width: 150px">Hình ảnh</th>*@
                            <th>Tên thương hiệu</th>
                            <th>Slug</th>
                            <th style="width: 250px">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.id</td>
                                @*<td>
                                    <img src="@Url.Content("~/Content/images/brand/" + item.image)" alt="@item.name" style="width:100px; height:100px" />
                                </td>*@
                                <td>@item.name</td>
                                <td>@item.slug</td>
                                <td>
                                    @if (item.status == 1)
                                    {
                                        <a href="@Url.Action("Status", "Brand", new { id = item.id })" class="btn btn-sm btn-success">
                                            <i class="fas fa-toggle-on"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("Status", "Brand", new { id = item.id })" class="btn btn-sm btn-danger">
                                            <i class="fas fa-toggle-off"></i>
                                        </a>
                                    }

                                    <a href="@Url.Action("Details", "Brand", new { id = item.id })" class="btn btn-sm btn-info">
                                        <i class="fa fa-eye" aria-hidden="true"></i>
                                    </a>
                                    <a href="@Url.Action("Edit", "Brand", new { id = item.id })" class="btn btn-sm btn-primary">
                                        <i class="fa fa-edit" aria-hidden="true"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", "Brand", new { id = item.id })" class="btn btn-sm btn-danger">
                                        <i class="fa fa-trash" aria-hidden="true"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
