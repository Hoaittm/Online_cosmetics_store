@model TranThiMinhHoai_2122110262.Models.Brand

@{
    ViewBag.Title = "Chỉnh sửa thương hiệu";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý thương hiệu</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li class="breadcrumb-item active">Brand Page</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-12 text-right">
                    @Html.ActionLink("Trở về Brands", "Index", null, new { @class = "btn btn-sm btn-info" })
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    @using (Html.BeginForm("Update", "Brand", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.id)
                        <h1 class="text-center">Chỉnh sửa thương hiệu</h1>

                        <div class="mb-3">
                            <label for="name">Tên</label>
                            @Html.TextBoxFor(model => model.name, new { @class = "form-control", @id = "name" })
                            @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            <label for="description">Mô tả</label>
                            @Html.TextAreaFor(model => model.description, new { @class = "form-control", @id = "description", rows = 3 })
                            @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                        </div>


                        @*<div class="mb-3">
                            <label for="ImageUpload">Hình ảnh</label>
                            @if (Model.image != null)
                            {
                                <div class="mb-2">
                                    <img src="@Url.Content("~/Content/Images/Brands/" + Model.image)" alt="@Model.image" style="max-width: 100px; max-height: 100px;" />
                                </div>
                            }
                            <input type="file" name="ImageUpload" id="ImageUpload" class="form-control @(ViewData.ModelState["ImageUpload"]?.Errors.Count > 0 ? "is-invalid" : "")" />
                            @Html.ValidationMessage("ImageUpload", "", new { @class = "text-danger" })
                        </div>*@

                        <div class="mb-3">
                            <label for="status">Trạng thái</label>
                            @Html.DropDownListFor(model => model.status, new SelectList(new List<SelectListItem>
                            {
                                new SelectListItem { Text = "Xuất bản", Value = "1" },
                                new SelectListItem { Text = "Chưa xuất bản", Value = "2" }
                            }, "Value", "Text", Model.status), new { @class = "form-control", @id = "status" })
                            @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            <button type="submit" class="btn btn-success">Cập nhật</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
