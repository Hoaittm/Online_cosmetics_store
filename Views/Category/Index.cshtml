@model IEnumerable<TranThiMinhHoai_2122110262.Models.Category>

@{
    ViewBag.Title = "Index";
}



<section class="section-content py-4">
    <div class="container">
        <div class="row">
            @foreach (var category in Model)
            {
                <div class="col-md-3 mb-4">
                    <div class="card" style="width:240px">
                        <img src="@Url.Content("~/Content/images/category/" + category.image)" class="card-img-top" style ="height:200px" alt="@category.name">
                        <div class="card-body">
                            <h4 class="card-title">
                                <a href="@Url.Action("ListProductByCategory", "Category", new { id = category.id })" class="text-dark">
                                    @category.name
                                </a>
                            </h4>
                            <!--<ul class="list-unstyled">
                                <li><a href="#" class="text-muted">@category.description</a></li>-->
                                <!-- Add more items here if needed -->
                            <!--</ul>-->
                        </div>
                    </div>
                </div> <!-- col-md-3 -->
            }
        </div> <!-- row -->
    </div> <!-- container -->
</section>

<!-- ========================= SECTION CONTENT END// ========================= -->
